{
  "name": "bookin-adventure-backend",
  "version": "1.0.0",
  "description": "Backend de la plateforme Book-in Adventure (Node.js, Express, MongoDB, Stripe)",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start:prod": "cross-env APP_ENV=production node dist/server.js",
    "start:dev": "cross-env APP_ENV=development nodemon dist/server.js",
    "tsc:watch": "tsc --watch",
    "dev": "concurrently \"npm run tsc:watch\" \"npm run start:dev\"",
    "test": "vitest run"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "nodemailer": "^7.0.12",
    "stripe": "^12.18.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.3",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}
